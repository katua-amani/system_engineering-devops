#!/usr/bin/env bash
# A Bash script that loops infinitely and prints a message when receiving SIGTERM

# Trap SIGTERM and print message immediately
trap 'echo "I am invincible!!!"; fflush' SIGTERM

# Bash doesnâ€™t have a built-in fflush, but we can force flush using printf
trap 'printf "%s\n" "I am invincible!!!"' SIGTERM

# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 2
done
